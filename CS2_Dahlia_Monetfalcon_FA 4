num_students = int(input("Enter number of students: "))
num_subjects = int(input("Enter number of subjects: "))

total_scores_all_students = 0 # to compute class average
total_subjects_all_students = num_students * num_subjects

print()  


for s in range(1, num_students + 1):
    print(f"Student {s}")
    student_total = 0

    
    for sub in range(1, num_subjects + 1):
        score = float(input(f"Enter score {sub}: "))
        student_total += score

    
    student_average = student_total / num_subjects
    print(f"Average for Student {s} = {student_average}")

    print()
    total_scores_all_students += student_total


class_average = total_scores_all_students / total_subjects_all_students

print(f"Class Average = {class_average}")
